datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  profile   Profile?
  createdAt DateTime @default(now())
}

model Profile {
  id       Int    @id @default(autoincrement())
  bio      String?
  userId   Int     @unique
  user     User    @relation(fields: [userId], references: [id])
}
