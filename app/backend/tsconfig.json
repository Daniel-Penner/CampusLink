{
  "compilerOptions": {
    "outDir": "./dist", // Make sure the output directory is set
    "rootDir": "./src", // Source directory
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src/**/*.ts"], // Ensure all TypeScript files are included
  "exclude": ["node_modules"]
}
